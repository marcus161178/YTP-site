<p id="notice"><%= notice %></p>

<div class="post-title">
<h1>
  <%= @post.title.upcase %>
</h1>
<h2 class="published_date">Published on: <%= @post.published_at.to_date.to_formatted_s(:long_ordinal) %></h2>

</div>


<div class="post-content">
	<div class="post_video">
		<% @videos.each do |video|%>
		<%= video.url.html_safe %>
		<% if can? :update, @post %> 
		
	    <%= link_to "edit", edit_video_path(video) %> |
	    <%= link_to "remove", video, :confirm => 'Are you sure?', :method => :delete %>
		<% end %>
		<% end%>
	</div>
		<div class="post-photos">
		<%= render @blog_images %>

	</div>
	
	  <div class="post_body"><%= @post.body %></div>
	  
<div class="singlepost_vendors">
	  
 <% @post.categories.each do |category| %>
<p>| <%= category.parent.name %> : <%= link_to category.name, category_path(category) %> |</p>
<% end %>

</div>
  
  
</div>

<div class="post-links">
<% if can? :update, @post %> 
<%= link_to 'Add Videos', new_video_path(:post_id => @post.id) %><br/>
<%= link_to 'Edit Blog Text and Categories', edit_post_path(@post) %> 

<%= form_for BlogImage.new , :html => {:multipart => true }   do |f| %>
<div class="field">
  <%= f.hidden_field :post_id, :value => @post.id %><br />
</div>

<div class="field">
	<%= label_tag "add photos"%>
  <%= file_field_tag(:image , multiple: true, name: "blog_image[image]") %><br />
</div>
<% end %>

|<% end %>

<% unless @prev_post.blank? %>

<%= link_to "Previous Post | ", @prev_post  %></h3>
<% end %>

<%= link_to 'Back to Blog', blog_path %>

<% unless @next_post.blank? %>
<%= link_to " | Next Post", @next_post  %></h3>
<% end %>



</div>
