<h1>Listing weddings</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Photo package</th>
    <th>Engagement shoot</th>
    <th>Cinematography</th>
    <th>Country</th>
    <th>Bride getting ready</th>
    <th>Groom getting ready</th>
    <th>Ceremony location</th>
    <th>Ceremony setting</th>
    <th>Type of ceremony</th>
    <th>Ceremony time</th>
    <th>Reception location</th>
    <th>Order of events</th>
    <th>Bridesmaids</th>
    <th>Groomsmen</th>
    <th>Number of guests</th>
    <th>Photography style</th>
    <th>Payment currency</th>
    <th>Payment method</th>
    <th>How did you find us</th>
    <th>Recommended by</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @weddings.each do |wedding| %>
  <tr>
    <td><%= wedding.date %></td>
    <td><%= wedding.photo_package_id %></td>
    <td><%= wedding.engagement_shoot %></td>
    <td><%= wedding.cinematography %></td>
    <td><%= wedding.country %></td>
    <td><%= wedding.bride_getting_ready %></td>
    <td><%= wedding.groom_getting_ready %></td>
    <td><%= wedding.ceremony_location %></td>
    <td><%= wedding.ceremony_setting %></td>
    <td><%= wedding.type_of_ceremony_id %></td>
    <td><%= wedding.ceremony_time %></td>
    <td><%= wedding.reception_location %></td>
    <td><%= wedding.order_of_events %></td>
    <td><%= wedding.bridesmaids %></td>
    <td><%= wedding.groomsmen %></td>
    <td><%= wedding.number_of_guests %></td>
    <td><%= wedding.photography_style %></td>
    <td><%= wedding.payment_currency %></td>
    <td><%= wedding.payment_method %></td>
    <td><%= wedding.how_did_you_find_us %></td>
    <td><%= wedding.recommended_by %></td>
    <td><%= wedding.notes %></td>
    <td><%= link_to 'Show', wedding %></td>
    <td><%= link_to 'Edit', edit_wedding_path(wedding) %></td>
    <td><%= link_to 'Destroy', wedding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

